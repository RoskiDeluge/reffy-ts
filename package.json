{
  "name": "reffy-ts",
  "version": "0.1.0",
  "description": "Local-first references store with optional Linear sync (TypeScript)",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "reffy": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "cleanup:linear-dupes": "tsx src/tools/cleanup-linear-duplicates.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "dotenv": "^16.6.1",
    "fastify": "^5.7.4",
    "mime-types": "^2.1.35",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/node": "^24.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
