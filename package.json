{
  "name": "reffy-ts",
  "version": "0.3.0",
  "description": "CLI-first, framework-agnostic references workflow for any repo (TypeScript)",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "reffy": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "dev": "tsx watch src/cli.ts",
    "check": "tsc --noEmit",
    "test": "npm run build && vitest run --coverage",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "mime-types": "^2.1.35",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
